<$wikify name="introTitle" text="""<$macrocall $name="now" format=<<introTitleTemplate>>/>""">
<$vars ThisCreator=<<journalTitle>> ThisCarpe=<<carpeTitle>> ThisIntro=<<introTitle>> >
